{% extends 'base.html.twig' %}

{% block title %}Edit product{% endblock %}

{% block body %}
<div class="container" id="Product">
    <h3 class="card-title display-5 fw-bold">
        <img src="{{ asset('logo.png') }}" class="card-img-top" alt="Product" style="float: left; height: 75px; width: 75px">
    </h3>
    <div class="card-body" >
        <div class="row">
            <div class="col-md-12">
                    <div class="card-body card-text">
                        {{ form_start(form, {'attr': {'id': 'formProduct', 'onsubmit':'return validateForm();'}}) }}
                        {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" name="Edit">Edit product</button>
    <a href="/product" class="btn btn-secondary" style="float: right; margin-right: 2px">Homepage</a>
    {{ form_end(form) }}
</div>
{% endblock %}
